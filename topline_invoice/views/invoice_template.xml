<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="document_tax_totals" inherit_id="account.document_tax_totals">
        <xpath expr="//tr[hasclass('o_total')]" position="replace">
            <tr class="border-black">
                <td class="border-black" style="color:black;background-color:transparent !important;"><strong>Total</strong></td>
                <td class="border-black text-end" style="color:black;background-color:transparent !important;">
                    <span t-esc="tax_totals['formatted_amount_total_rounded']" t-if="'formatted_amount_total_rounded' in tax_totals"/>
                    <span t-esc="tax_totals['formatted_amount_total']" t-else=""/>
                </td>
            </tr>
        </xpath>
    </template>

</odoo>
