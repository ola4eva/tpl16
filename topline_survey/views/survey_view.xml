<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="survey_form" model="ir.ui.view">
            <field name="name">survey.form</field>
            <field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_form" />
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="attributes">
                    <attribute name="groups">survey.group_survey_manager,topline_survey.group_survey_creator</attribute>
                </xpath>
            </field>
        </record>
        
        <!-- Hide username from survey user_input tree -->
        <record id="survey_user_input_tree" model="ir.ui.view">
            <field name="name">survey_user_input_tree_inherit</field>
            <field name="model">survey.user_input</field>
            <field name="inherit_id" ref="survey.survey_user_input_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='email']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
