        <record id="topline_open_view_employee_profile" model="ir.actions.act_window">
            <field name="name">My Profile</field>
            <field name="res_model">hr.employee</field>
            
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('user_id','=',uid)]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            <field name="search_view_id" ref="hr.view_employee_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new employee.
              </p><p>
                With just a quick glance on the Odoo employee screen, you
                can easily find all the information you need for each person;
                contact data, job position, availability, etc.
              </p>
            </field>
        </record>

        <record id="hr_kanban_view_employees_extension" model="ir.ui.view">
            <field name="name">hr.kanban.view.employees.extension</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.hr_kanban_view_employees" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_kanban_record_headings')]/span" position="after">
                    <span t-if="record.work_email.raw_value" class="o_kanban_record_subtitle"><field name="work_email"/></span>
                    <span t-if="record.mobile_phone.raw_value" class="o_kanban_record_subtitle"><field name="mobile_phone"/></span>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="topline_open_view_employee_profile_kanban">
             <field name="sequence" eval="1"/>
             <field name="view_mode">kanban</field>
             <field name="view_id" ref="hr.hr_kanban_view_employees"/>
             <field name="act_window_id" ref="topline_open_view_employee_profile"/>
        </record>

        <record model="ir.actions.act_window.view" id="topline_open_view_employee_profile_tree">
             <field name="sequence" eval="2"/>
             <field name="view_mode">tree</field>
             <field name="view_id" ref="hr.view_employee_tree"/>
             <field name="act_window_id" ref="topline_open_view_employee_profile"/>
        </record>
        
        <record model="ir.actions.act_window.view" id="topline_open_view_employee_profile_form">
             <field name="sequence" eval="3"/>
             <field name="view_mode">form</field>
             <field name="view_id" ref="my_profile_view_employee_form"/>
             <field name="act_window_id" ref="topline_open_view_employee_profile"/>
        </record>

        <menuitem
            id="hr.menu_hr_root"
            name="Employees"
            groups="hr.group_hr_manager,hr.group_hr_user,base.group_user"
            web_icon="hr,static/description/icon.png"
            action="topline_open_view_employee_list_my"
            sequence="75"/>
        
        <menuitem
            id="hr.menu_open_view_employee_list_my"
            name="Employees"
            parent="hr.menu_hr_root"
            sequence="3"
            groups="base.group_user"/>

        <menuitem 
            name="Directory" 
            id="topline_hr_employee_directory_menu" 
            parent="hr.menu_open_view_employee_list_my" 
            action="topline_open_view_employee_list_my"
            sequence="1" 
            groups="base.group_user"/>

        <menuitem 
            name="My Profile" 
            id="topline_hr_employee_profile_menu" 
            parent="hr.menu_open_view_employee_list_my"
            action="topline_open_view_employee_profile" 
            sequence="2"
            groups="base.group_user"/>        

        <menuitem
            id="topline_hr_employee_menu"
            name="Employees"
            action="hr.open_view_employee_list_my"
            parent="hr.menu_open_view_employee_list_my"
            sequence="3"
            groups="hr.group_hr_manager,hr.group_hr_user"/> 
    </data>
</odoo>
