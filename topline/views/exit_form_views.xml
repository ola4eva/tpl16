<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="topline_exit_form_tree_view" model="ir.ui.view">
			<field name="name">exit.form.tree</field>
			<field name="model">exit.form</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="employee_id"/>
					<field name="applicant_function"/>
					<field name="date"/>
					<field name="purpose_of_exit"/>
					<field name="time_of_leaving"/>
					<field name="time_of_returrning"/>
				</tree>
			</field>
		</record>
    
        <record id="topline_exit_form_form_view" model="ir.ui.view">
			<field name="name">exit.form</field>
			<field name="model">exit.form</field>
			<field name="priority" eval="2"/>
			<field name="arch" type="xml">
				<form string="Exit Form">
					<header>
						<button name="button_submit" states="draft" string="Submit To Manager" type="object"/>
						<button name="action_line_manager_approval" states="supervisor" string="Approve" type="object" class="btn btn-primary" groups="topline.group_hr_line_manager"/>
						<button name="button_hr_approval" states="manager" string="Approve" class="btn btn-primary" type="object" groups="hr.group_hr_manager"/>
						<button name="action_reject" states="supervisor,manager" class="btn btn-danger" string="Reject" type="object" />
						<field name="state" widget="statusbar" statusbar_visible="draft,line_manager,store,approve"/>
					</header>
					<sheet>
						<span>
							<b>Exit Form</b>
						</span>
						<div class="oe_title">
							<h1>
								<field name="name" readonly="1" attrs="{'invisible': [('name', '=', 'New')]}"/>
							</h1>
						</div>
						<group>
							<group>
								<field name="employee_id"/>
								<field name="applicant_function" />
								<field name="job_id"/>
								<field name="purpose_of_exit"/>
							</group>
							<group>
								<field name="date"/>
								<field name="time_of_leaving" />
								<field name="time_of_returrning" />
							</group>
						</group>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="activity_ids" widget="mail_activity"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>

        <record model="ir.actions.act_window" id="topline_exit_form_action">
			<field name="name">Exit Form (Working Hours)</field>
			<field name="res_model">exit.form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

        <menuitem name="Exit Form" id="topline_exit_form_menu" parent="hr.menu_hr_root" action="topline_exit_form_action"/>
    
    </data>
    

</odoo>
